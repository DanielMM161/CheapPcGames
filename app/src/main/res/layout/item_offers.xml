<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.util.List"/>
        <import type="com.dmm.cheappcgames.data.StoreItem"/>

        <variable
            name="offer"
            type="com.dmm.cheappcgames.data.Offer" />

        <variable
            name="stores"
            type="List&lt;StoreItem>" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@drawable/gradient_layout"
            android:layout_gravity="start"
            app:imageUrl="@{offer.thumb}" />

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:maxLines="2"
                android:text="@{offer.title}"
                tools:text="Name"/>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:storeId="@{offer.storeID}"
                    app:stores="@{stores}" />

                <TextView
                    android:id="@+id/normal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_toStartOf="@+id/discount"
                    android:layout_marginEnd="8dp"
                    android:text="@{offer.normalPrice}"
                    tools:text="15$"/>

                <TextView
                    android:id="@+id/discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/normal_price"
                    android:layout_toStartOf="@+id/discount"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{offer.salePrice}"
                    tools:text="8$" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="8dp"
                    textSaving="@{offer.savings}"
                    android:textAlignment="center"
                    android:gravity="center"
                    tools:text="91%"
                    android:background="?attr/colorPrimary" />

        </RelativeLayout>
    </LinearLayout>

</layout>
