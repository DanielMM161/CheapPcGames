<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button Distributor -->
    <style name="ButtonDistributor" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/state_distributor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ActionBar -->
    <style name="Widget.TodoName.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <!-- Divider style -->
    <style name="Divider" parent="">
        <item name="android:background">?attr/dividerHorizontal</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="color">@color/black</item>
    </style>

</resources>